@page
@model TCGCollectionApp.Pages.Cards.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>MTGCard</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MTGCard.ID" />
            <div class="form-group">
                <label asp-for="MTGCard.Name" class="control-label"></label>
                <input asp-for="MTGCard.Name" class="form-control" />
                <span asp-validation-for="MTGCard.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MTGCard.LanguageCode" class="control-label"></label>
                <input asp-for="MTGCard.LanguageCode" class="form-control" />
                <span asp-validation-for="MTGCard.LanguageCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MTGCard.OracleID" class="control-label"></label>
                <input asp-for="MTGCard.OracleID" class="form-control" />
                <span asp-validation-for="MTGCard.OracleID" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="MTGCard.IsFoil" /> @Html.DisplayNameFor(model => model.MTGCard.IsFoil)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
