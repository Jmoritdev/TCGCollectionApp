@page
@model TCGCollectionApp.Pages.Collection.IndexModel
@{
    ViewData["Title"] = "My Collection";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}



<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.18/dist/js/bootstrap-select.min.js"></script>

<script>
    $.fn.selectpicker.Constructor.BootstrapVersion = '4';
</script>

<script src="~/js/Collection/Index.js"></script>

<h1>My Collection</h1>

<div class="jumbotron">
    <h4>Add to collection</h4>
    <form id="addCardForm">
        <div class="form-row">
            <div class="form-group col">
                <label for="inputName">Name</label>
                <input id="inputName" type="text" class="form-control" placeholder="Card name" list="nameOptionList" name="cardName" />
                <datalist id="nameOptionList">
                </datalist>
            </div>
            <div class="form-group col">
                <label for="selectSet">Set</label>
                <select id="selectSet" class="form-control selectpicker" name="setName">
                    <option>Select Set</option>
                </select>
            </div>
            <div class="form-group col">
                <label for="selectLang">Language</label>
                <select id="selectLang" class="form-control" name="lang">
                    <option selected>Select Language</option>
                </select>
            </div>
            <div class="form-group col">
                <label for="inputAmount">Amount</label>
                <input id="inputAmount" type="number" class="form-control" value="1" name="amount" />
            </div>
        </div>
        <div class="form-row">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="inputSigned" name="isSigned" />
                <label class="form-check-label" for="inputSigned">
                    Signed?
                </label>
            </div>
        </div>
        <div class="form-row">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="inputFoil" name="isFoil" />
                <label class="form-check-label" for="inputFoil">
                    Foil?
                </label>
            </div>
        </div>
        <button id="submitButton" type="submit" class="btn btn-success">Submit</button>
    </form>
    <div class="alert alert-success" data-alert="alert" role="alert" style="display:none">

    </div>
    <div class="alert alert-danger" data-alert="alert" role="alert" style="display:none">

    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Set</th>
            <th scope="col">Amount</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>